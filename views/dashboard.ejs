<link rel="stylesheet" href="/css/dashboard.css">

<div class="sidebar">
    <div class="logo">
        <a href="/dashboard"><img src="/assets/fintrack_logo.png" alt="FinTrack Logo" height="50px" width="100px"></a>
    </div>
    <ul class="nav-links">
        <li><a href="/dashboard" class="active">Main</a></li>
        <li><a href="/dashboard/profile">Edit Profile</a></li>
        <li><a href="/dashboard/budget">Manage Budget</a></li>
        <li><a href="/dashboard/category">Manage Category</a></li>
        <li><a href="/dashboard/saving">Manage Saving</a></li>
        <li><a href="/dashboard/transactions">View Transactions</a></li>
    </ul>
</div>

<div class="main-content">
    <header class="dashboard-header">
        <div class="user-info">
            <span>Welcome, <%= username %>!</span>
        </div>
        <form action="/logout" method="POST" class="logout-form">
            <button type="submit" class="btn-logout"><img src="/assets/exit.png" height="20px" width="20px" alt="Logout"></button>
        </form>
    </header>

    <main class="content-area">
        <div class="dashboard-title">
            <h1>Dashboard Overview</h1>
        </div>

        <div class="summary-grid">
            <div class="summary-card income">
                <div class="card-icon">ðŸ’°</div>
                <div class="card-content">
                    <h3>Total Income</h3>
                    <p class="amount" id="totalIncome">$0.00</p>
                </div>
            </div>

            <div class="summary-card expense">
                <div class="card-icon">ðŸ’¸</div>
                <div class="card-content">
                    <h3>Total Expenses</h3>
                    <p class="amount" id="totalExpenses">$0.00</p>
                </div>
            </div>

            <div class="summary-card balance">
                <div class="card-icon">ðŸ“Š</div>
                <div class="card-content">
                    <h3>Net Balance</h3>
                    <p class="amount" id="netBalance">$0.00</p>
                </div>
            </div>

            <div class="summary-card savings">
                <div class="card-icon">ðŸŽ¯</div>
                <div class="card-content">
                    <h3>Savings Progress</h3>
                    <p class="amount" id="savingsProgress">0%</p>
                    <div class="progress-bar">
                        <div class="progress-fill" id="savingsProgressBar" style="width: 0%"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="analytics-section">
            <div class="chart-container">
                <div class="chart-header">
                    <h2>Income vs Expenses</h2>
                </div>
                <div class="chart-body">
                    <canvas id="incomeExpenseChart" height="250"></canvas>
                </div>
            </div>
            
            <div class="chart-container">
                <div class="chart-header">
                    <h2>Expense by Category</h2>
                </div>
                <div class="chart-body">
                    <canvas id="expenseCategoryChart" height="250"></canvas>
                </div>
            </div>
        </div>

        <div class="dashboard-grid">
            <div class="dashboard-widget">
                <div class="widget-header">
                    <h2>Recent Transactions</h2>
                    <a href="/dashboard/transactions" class="view-all">View All</a>
                </div>
                <div class="widget-content" id="recentTransactions">
                    <div class="loading">Loading transactions...</div>
                </div>
            </div>

            <div class="dashboard-widget">
                <div class="widget-header">
                    <h2>Budget Progress</h2>
                    <a href="/dashboard/budget" class="view-all">Manage</a>
                </div>
                <div class="widget-content">
                    <div class="budget-chart-container">
                        <canvas id="budgetChart" height="220"></canvas>
                    </div>
                    <div class="budget-summary" id="budgetSummary">
                        <div class="loading">Loading budget data...</div>
                    </div>
                </div>
            </div>

            <div class="dashboard-widget">
                <div class="widget-header">
                    <h2>Savings Goals</h2>
                    <a href="/dashboard/saving" class="view-all">Manage</a>
                </div>
                <div class="widget-content" id="savingsOverview">
                    <div class="loading">Loading savings...</div>
                </div>
            </div>
            
            <div class="dashboard-widget">
                <div class="widget-header">
                    <h2>Monthly Spending Trend</h2>
                </div>
                <div class="widget-content">
                    <canvas id="spendingTrendChart" height="220"></canvas>
                </div>
            </div>
        </div>

        <div class="quick-actions">
            <h2>Quick Actions</h2>
            <div class="actions-grid">
                <button class="action-btn" onclick="openQuickTransaction('income')">
                    <span class="action-icon">âž•</span>
                    <span>Add Income</span>
                </button>
                <button class="action-btn" onclick="openQuickTransaction('expense')">
                    <span class="action-icon">âž–</span>
                    <span>Add Expense</span>
                </button>
                <button class="action-btn" onclick="window.location.href='/dashboard/budget'">
                    <span class="action-icon">ðŸ“Š</span>
                    <span>Create Budget</span>
                </button>
                <button class="action-btn" onclick="window.location.href='/dashboard/saving'">
                    <span class="action-icon">ðŸŽ¯</span>
                    <span>New Goal</span>
                </button>
            </div>
        </div>
    </main>
</div>

<div id="quickTransactionModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="quickModalTitle">Add Transaction</h2>
            <span class="close" onclick="closeQuickModal()">&times;</span>
        </div>

        <form id="quickTransactionForm" method="POST" action="/dashboard/transactions">
            <input type="hidden" id="quickType" name="type" value="">

            <div class="form-group">
                <label for="quickAmount">Amount *</label>
                <input type="number" id="quickAmount" name="amount" step="0.01" min="0.01" required placeholder="0.00">
            </div>

            <div class="form-group">
                <label for="quickCategory">Category</label>
                <select id="quickCategory" name="category_id">
                    <option value="">No Category</option>
                </select>
            </div>

            <div class="form-group">
                <label for="quickDescription">Description</label>
                <input type="text" id="quickDescription" name="description" placeholder="Optional description">
            </div>

            <input type="hidden" name="transaction_date" id="quickDate">

            <div class="modal-footer">
                <button type="button" class="btn-secondary" onclick="closeQuickModal()">Cancel</button>
                <button type="submit" class="btn-primary" id="quickSubmitBtn">Add Transaction</button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/dashboard.js"></script>