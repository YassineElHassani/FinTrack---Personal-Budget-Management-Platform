<header class="navbar">
	<div class="logo"><a href="/"><img src="/assets/fintrack_logo.png" alt="FinTrack Logo" height="50px"
				width="100px"></a></div>
	<nav>
		<a href="/register" class="btn-primary">Register</a>
	</nav>
</header>
<div class="auth-body">
	<div class="auth-container">
		<h2>Welcome Back</h2>
		<p>Login to manage your budget</p>
		<% if (typeof error !=='undefined' && error) { %>
			<div class="error-message">
				<%= error %>
			</div>
		<% } %>
		<% if (typeof success !=='undefined' && success) { %>
			<div class="success-message">
				<%= success %>
			</div>
		<% } %>
		<form action="/login" method="POST" class="auth-form">
			<input type="email" name="email" placeholder="Email Address" required>
			<input type="password" name="password" placeholder="Password" required>
			<button type="submit" class="btn-primary">Login</button>
		</form>
		<p class="auth-link">Forgot your password? <a href="/password/reset-request">Reset it here</a></p>
	</div>
</div>