<header class="navbar">
  <div class="logo"><a href="/"><img src="/assets/fintrack_logo.png" alt="FinTrack Logo" height="50px"
        width="100px"></a></div>
  <nav>
    <a href="/register" class="btn-primary">Register</a>
  </nav>
</header>

<div class="auth-body">
  <div class="auth-container">
    <h2>Reset Your Password</h2>
    <p>Enter your email address and we will send you a link to reset your password.</p>
    <% if (typeof error !=='undefined' && error) { %>
    <div class="error-message">
      <%= error %>
    </div>
    <% } %>
    <% if (typeof message !=='undefined' && message) { %>
    <div class="success-message">
      <%= message %>
    </div>
    <% } %>
    <form action="/password/reset-request" method="POST" class="auth-form">
      <input type="email" name="email" placeholder="Email Address" required>
      <button type="submit" class="btn-primary">Send Reset Link</button>
    </form>
    <p class="auth-link">Remember your password? <a href="/login">Login</a></p>
  </div>
</div>