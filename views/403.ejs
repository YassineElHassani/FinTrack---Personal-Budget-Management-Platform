<link rel="stylesheet" href="/css/403.css">

<header class="navbar">
    <div class="logo"><a href="/"><img src="/assets/fintrack_logo.png" alt="FinTrack Logo" height="50px"
                width="100px"></a></div>
    <nav>
        <a href="/register" class="btn-primary">Register</a>
    </nav>
</header>

<div class="main-content">
    <main class="content-area">
        <div class="error-content">
            <div class="error-icon">
                <img src="/assets/forbidden.png" height="150" width="150" alt="403 Forbidden">
            </div>

            <h1 class="error-code">403</h1>

            <h2 class="error-title">Access Forbidden</h2>

            <p class="error-message">
                Sorry, you don't have permission to access this resource. You may need to log in or check your account
                permissions.
            </p>

            <div class="error-actions">
                <a href="/login" class="error-btn error-btn-primary">
                    Login to Account
                </a>
            </div>

            <p style="margin-top: 3rem; color: #999; font-size: 0.9rem;">
                Need help? Make sure you're logged in with the correct account permissions.
            </p>
        </div>
    </main>
</div>

<script src="/js/403.js"></script>